<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/rectangle_14">

        <View
            android:layout_width="0dp"
            android:layout_height="251dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="1dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="-1dp"
            android:layout_marginBottom="-2dp"
            android:background="@drawable/footer"
            android:elevation="20dp"
            android:id="@+id/view" />

        <TextView
        android:id="@+id/day_1_text"
        android:layout_width="317dp"
        android:layout_height="57dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="4.14dp"
        android:layout_marginRight="62dp"
        android:gravity="top"
        android:text="@string/alarm_clock"
        android:textAppearance="@style/alarm_clock"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="256dp"
        android:layout_marginTop="438dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:contentDescription="TODO"
        android:elevation="100dp"
        android:src="@drawable/button_add" />

<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="616dp"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:layout_marginBottom="43dp"-->
<!--        tools:visibility="gone">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="665dp"
        android:layout_below="@+id/day_1_text"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="3dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/clocks"
            android:layout_width="match_parent"
            android:layout_height="676dp"
            android:elevation="100dp" />
    </LinearLayout>
    <!--    </ScrollView>-->

</RelativeLayout>